<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="font_resources_title">
        <item name="android:textSize">@dimen/size_of_text_resources_title</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="font_resources">
        <item name="android:textSize">@dimen/size_of_text_resources</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="font_btnPanel">
        <item name="android:textSize">@dimen/size_of_text_button_panel</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="font_btnMove">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="font_Panel">
        <item name="android:textSize">@dimen/size_of_text_in_panel</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="font_fragment_title">
        <item name="android:textSize">@dimen/size_of_fragmentText_title</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="font_fragment_infoText">
        <item name="android:textSize">@dimen/size_of_fragmentText</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="font_fragment_progressSeekBar">
        <item name="android:textSize">@dimen/size_of_fragmentText_title</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="font_infoEvents">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/size_of_font_infoEvent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/padding_eventInfoText</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
